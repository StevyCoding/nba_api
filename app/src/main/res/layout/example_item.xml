<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="#99ffbb"
        >

        <ImageView
            android:id="@+id/imageViewPlayer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#FF5722"
            android:src="@drawable/ic_baseline_sports_basketball_24" />

        <TextView
            android:id="@+id/textViewNamePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageViewPlayer"
            android:text="line 1"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTeamPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNamePlayer"
            android:layout_toRightOf="@id/imageViewPlayer"
            android:text="line 2"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonPlayer"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/textViewTeamPlayer"
            android:layout_toRightOf="@id/imageViewPlayer"
            android:background="#99fbbb"
            android:text="Detail"
            app:backgroundTint="#2196F3" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>